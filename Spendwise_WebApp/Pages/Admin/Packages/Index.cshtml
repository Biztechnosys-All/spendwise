@page
@model Spendwise_WebApp.Pages.Admin.Packages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div style="padding:1.5%;">
<h1>Packages</h1>

<p style="padding:1%;text-align:right">
    <a asp-page="Create" class="btn btn-dark">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].PackageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Package != null && Model.Package.Any())
        {
            @foreach (var item in Model.Package)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackageName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.PackageId" class="btn btn-dark">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.PackageId" class="btn btn-dark">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.PackageId" class="btn btn-dark">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
               <tr>
                   <td colspan="4" class="text-center">No Packages are avalible</td>
               </tr>
        }
    </tbody>
</table>
</div>