@page
@model Spendwise_WebApp.Pages.Admin.Users.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div style="padding:1.5%;">
    <h3>Users</h3>

    <p style="padding:1%;text-align:right;">
        <a asp-page="Create" class="btn btn-dark">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].MobileNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].IsAdmin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].IsActive)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.User != null && Model.User.Any())
            {
                @foreach (var item in Model.User)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MobileNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsAdmin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.UserID" class="btn btn-dark">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.UserID" class="btn btn-dark">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.UserID" class="btn btn-dark">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center">
                        No Users added
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>