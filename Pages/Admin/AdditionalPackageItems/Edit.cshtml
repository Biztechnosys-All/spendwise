@page
@model Spendwise_WebApp.Pages.Admin.AdditionalPackageItems.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div style="padding:1.5%;">
    <h4>Edit Package</h4>
    <hr />
    <div class="row">
        <div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="additionalPackageItem.AdditionalPackageItemId" />
                <div class="form-group col-md-4">
                    <label asp-for="additionalPackageItem.ItemName" class="control-label"></label>
                    <input asp-for="additionalPackageItem.ItemName" class="form-control" />
                    <span asp-validation-for="additionalPackageItem.ItemName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="additionalPackageItem.ItemShortDesc" class="control-label"></label>
                    <input asp-for="additionalPackageItem.ItemShortDesc" class="form-control" />
                    <span asp-validation-for="additionalPackageItem.ItemShortDesc" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="additionalPackageItem.ItemDetail" class="control-label"></label>
                    <textarea asp-for="additionalPackageItem.ItemDetail"></textarea>
                    <span asp-validation-for="additionalPackageItem.ItemDetail" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="additionalPackageItem.price" class="control-label"></label>
                    <input asp-for="additionalPackageItem.price" class="form-control" />
                    <span asp-validation-for="additionalPackageItem.price" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="additionalPackageItem.PackageName" class="control-label"></label>
                    <select asp-for="additionalPackageItem.PackageName" asp-items="Model.PackageList" class="form-control"></select>
                    <span asp-validation-for="additionalPackageItem.PackageName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="additionalPackageItem.ItemGroup" class="control-label"></label>
                    <select asp-for="additionalPackageItem.ItemGroup" class="form-control">
                        <option value="">select term</option>
                        <option value="annually">Annually</option>
                        <option value="monthly">Monthly</option>
                        <option value="finance">Finance</option>
                        <option value="bustel">Bustel</option>
                    </select>
                    <span asp-validation-for="additionalPackageItem.ItemGroup" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Save" class="btn btn-dark" />
                    <a asp-page="./Index" class="btn btn-dark">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>