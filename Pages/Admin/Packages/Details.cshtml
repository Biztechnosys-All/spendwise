@page
@model Spendwise_WebApp.Pages.Admin.Packages.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div style="padding:1.5%;">
    <h1>Details</h1>

    <div>
        <h4>Package</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Package.PackageName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Package.PackageName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Package.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Package.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Package.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Package.Price)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Package.PackageId" class="btn btn-dark">Edit</a> |
        <a asp-page="./Index" class="btn btn-dark">Back to List</a>
    </div>
</div>