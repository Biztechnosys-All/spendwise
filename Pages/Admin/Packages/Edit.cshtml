@page
@model Spendwise_WebApp.Pages.Admin.Packages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div style="padding:1.5%;">
    <h4>Edit Package</h4>
    <hr />
    <div class="row">
        <div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Package.PackageId" />
                <div class="form-group col-md-4">
                    <label asp-for="Package.PackageName" class="control-label"></label>
                    <input asp-for="Package.PackageName" class="form-control" />
                    <span asp-validation-for="Package.PackageName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Package.ShortDescription" class="control-label"></label>
                    <input asp-for="Package.ShortDescription" class="form-control" />
                    <span asp-validation-for="Package.ShortDescription" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="Package.Description" class="control-label"></label>
                    <textarea asp-for="Package.Description" class="form-control"> </textarea>
                    <span asp-validation-for="Package.Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Package.Price" class="control-label"></label>
                    <input asp-for="Package.Price" class="form-control" />
                    <span asp-validation-for="Package.Price" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Package.PackageFeatures" class="control-label"></label>
                    <select asp-for="Package.PackageFeatures" asp-items="Model.PackageFeatureList" multiple="multiple" class="select2"></select>
                    <span asp-validation-for="Package.PackageFeatures" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Save" class="btn btn-dark" />
                    <a asp-page="./Index" class="btn btn-dark">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        let selectedValues = @Html.Raw(Json.Serialize(Model.SelectedFeaturesID));
        $('.select2').val(selectedValues).trigger('change');
    });
</script>