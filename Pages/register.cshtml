                <div class="ui-state-highlight ui-corner-all efAlert" id="success-message" style="display:none"><span class="ui-icon ui-icon-info" style="float: left; margin-right: .3em;"></span><span id="success-text"></span></div>
                <div id="efRequiredFieldLabel">
                    <p>Please complete the details below to register with us. All fields marked with <span class="text-danger">*</span> are mandatory.</p>
                </div>
                @if (Model.userExist)
                {
                    <div class="alert-danger p-2">
                        <p>The email address you entered is already registered. Please try logging in or use a different email address to register.</p>
                    </div>
                }
