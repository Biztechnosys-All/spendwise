                        $('#businessAddress').removeClass("active");
                        $('#appointment').removeClass("active");
                        $('#document').removeClass("active");
                        history.pushState(null, '', '?section=' + tabName + '&step=' + $("#address").text().trim());
                    }
                });
            }
            else if(type == "business-Address"){
                $.ajax({
                    url: '/FormationPage/Business-Address',
                    type: "get",
                    success: function (result) {
                        $("#formationTab").html(result);
                        $('#particular').removeClass("active");
                        $('#address').removeClass("active");
                        $('#businessAddress').addClass("active");
                        $('#appointment').removeClass("active");
                        $('#document').removeClass("active");
                        history.pushState(null, '', '?section=' + tabName + '&step=' + $("#businessAddress").text().trim());
                    }
                });
            }
            else if(type == "appointments"){
                $.ajax({
                    url: '/FormationPage/Appointments',
                    type: "get",
                    success: function (result) {
                        $("#formationTab").html(result);
                        $('#particular').removeClass("active");
                        $('#address').removeClass("active");
                        $('#businessAddress').removeClass("active");
                        $('#appointment').addClass("active");
                        $('#document').removeClass("active");
                        history.pushState(null, '', '?section=' + tabName + '&step=' + $("#appointment").text().trim());
