                $.ajax({
                    url: '/FormationPage/Particular',
                    type: "get",
                    success: function (result) {
                        $("#formationTab").html(result);
                        $('#particular').addClass("active");
                        $('#address').removeClass("active");
                        $('#businessAddress').removeClass("active");
                        $('#appointment').removeClass("active");
                        $('#document').removeClass("active");
                        history.pushState(null, '', '?section=' + tabName + '&step=' + $("#particular").text().trim());
                    }
                });
            }
            else if(type == "register-address"){
                $.ajax({
                    url: '/FormationPage/Register-Address',
                    type: "get",
                    success: function (result) {
                        $("#formationTab").html(result);
                        $('#particular').removeClass("active");
