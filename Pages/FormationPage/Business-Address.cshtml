}

<style>
    .ef-item-box{
        border-width: 1px !important;
        position: relative;
        margin-bottom: 20px;
        padding-top: 0;
        padding-right: 0;
        padding-left: 0;
        border: 2px solid #ccc;
        background-color: #fff;
    }

    .ef-item-content {
        padding: 18px 0px !important;
        position: relative;
    }

    .ef-item-bottom-border {
        border-bottom: 1px solid #ccc !important;
        margin: 30px 15px;
        padding-bottom: 1px;
    }

    .ef-panel-row {
        display: block;
    }

    .w-col-9 {
        width: 75%;
    }

    .w-col-9 h3 {
        margin: 10px 0 10px 0;
    }

    h3 {
        font-size: 20px !important;
        line-height: 18px !important;
        font-family: 'MyriadW08-BoldSemiConde' !important;
        color: #2a3135 !important;
    }

    .w-col-3 {
        width: 25%;
    }

    .item-box-price {
        float: right;
        text-align: right;
        width: 100%;
        font-size: 18px;
        margin-top: 10px;
    }

    .price {
        font-size: 18px !important;
        display: inline-block;
        margin-top: 5px;
        margin-bottom: 0;
        padding-top: 0;
        float: right;
        color: #333;
        font-weight: 700;
    }

    .renewal {
        /* color: #d90000 !important; */
        color: #333;
        font-size: 12px !important;
        margin-bottom: 10px;
        float: right;
        clear: right;
    }

    .ef-panel-row {
        display: block;
    }

    .ef-panel-icon {
        margin-top: 0 !important;
        margin-bottom: 30px;
        padding-top: 0;
        text-align: center;
    }

    .w-col-4 {
        width: 33.33333333%;
    }

    .ef-product-icon.ef-product-10698 {
        background-image: url(https://cdn-brand.s3.eu-west-1.amazonaws.com/assets/images/71-75SheltonStreetXL.jpg) !important;
        height: 230px !important;
        background-size: cover;
        width: 100%;
    }

    .ef-product-icon {
        background-repeat: no-repeat;
        margin: 0 auto;
    }

    .w-col-8 {
        width: 66.66666667%;
    }

    .w-col-8 h3 {
        margin: 10px 0 10px 0;
    }

    .savings-amount-row {
        margin-bottom: 20px;
    }

    .add-col {
        padding-right: 10px;
        text-align: right;
    }

    .ef-choose-btn {
        background-color: #5ea72d !important;
        border: 1px solid #5ea72d !important;
        color: #FFFFFF !important;
    }

    .ef-btn {
        padding: 10px 15px !important;
        width: auto !important;
        font-size: 14px !important;
        outline: none;
    }

    .ef-next-prev-btn {
        border-top: 3px solid #ccc;
        padding-top: 20px;
    }

    .w-col-6 {
        width: 50%;
    }

    .ef-btn.prevstep {
        background-color: #babdc0 !important;
        border: 1px solid #babdc0 !important;
        color: #FFFFFF !important;
        background-image: none !important;
        font-family: 'MyriadW08-SemiCondensed';
        font-size: 18px !important;
        background-position: 3% 50%;
        background-size: 22px;
        background-repeat: no-repeat;
        box-shadow: none;
        display: block;
        margin-right: 0;
        margin-bottom: 20px;
        float: left;
    }

</style>

